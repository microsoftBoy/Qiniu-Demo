<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhangshuai.qiniu_demo.Main2Activity">

    <com.zhangshuai.qiniu_demo.customview.StickyNavLayout
        android:id="@+id/mStickyNavLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhangshuai.qiniu_demo.customview.MyRecyclerView
                    android:id="@+id/mRecyclerview_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/_6"
                    android:orientation="vertical"
                    android:visibility="visible">
                </LinearLayout>

                <Button
                    android:id="@+id/bt_add1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="添加"
                    android:textSize="26sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/recyclerview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sticker_title"
                android:textSize="26sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                />


        </LinearLayout>


    </com.zhangshuai.qiniu_demo.customview.StickyNavLayout>


</LinearLayout>
